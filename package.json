{
  "name": "koa2-boilerplate",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "go": "node index.js",
    "start:dev": "better-npm-run start:dev",
    "start:prod": "better-npm-run start:prod",
    "build": "better-npm-run build",
    "watch:assets": "webpack --watch --colors --display-error-details --config build/webpack.config.js",
    "lint": "esw .",
    "lint:watch": "npm run lint -- --watch",
    "clean": "rimraf src/public/* src/view/layout/index.html"
  },
  "betterScripts": {
    "start:dev": {
      "command": "npm-run-all --parallel clean lint:watch watch:assets go",
      "env": {
        "NODE_ENV": "development"
      }
    },
    "start:prod": {
      "command": "npm-run-all build go",
      "env": {
        "NODE_ENV": "production"
      }
    },
    "build": {
      "command": "npm-run-all --parallel clean lint && webpack --colors --display-error-details --config build/webpack.config.js",
      "env": {
        "NODE_ENV": "production"
      }
    }
  },
  "pre-commit": [
    "lint"
  ],
  "author": "chenbin92",
  "license": "ISC",
  "dependencies": {
    "jquery": "^3.2.1",
    "koa": "^2.3.0",
    "koa-ejs": "^4.1.0",
    "koa-router": "^7.2.1",
    "koa-static": "^4.0.0",
    "lodash": "^4.17.4"
  },
  "devDependencies": {
    "assets-webpack-plugin": "^3.5.1",
    "babel-loader": "^7.1.0",
    "babel-preset-env": "^1.5.2",
    "babel-register": "^6.24.1",
    "better-npm-run": "0.0.15",
    "chalk": "^1.1.3",
    "copy-webpack-plugin": "^4.0.1",
    "css-loader": "^0.28.4",
    "eslint": "^4.1.1",
    "eslint-config-egg": "^4.2.1",
    "eslint-watch": "^3.1.2",
    "eventsource-polyfill": "^0.9.6",
    "extract-text-webpack-plugin": "^2.1.2",
    "html-loader": "^0.4.5",
    "html-webpack-plugin": "^2.28.0",
    "koa-webpack-middleware": "^1.0.5",
    "mz": "^2.6.0",
    "node-sass": "^4.5.3",
    "npm-run-all": "^4.0.2",
    "open-browser-webpack-plugin": "0.0.5",
    "pre-commit": "^1.2.2",
    "resolve-path": "^1.3.3",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.18.2",
    "url-loader": "^0.5.9",
    "webpack": "^3.0.0",
    "webpack-bundle-analyzer": "^2.8.2"
  }
}
